<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:HackF5.UnitySpy.AvaloniaGui.ViewModels;assembly=HackF5.UnitySpy.AvaloniaGui"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1350" d:DesignHeight="700" Height="200" Width="1400"
        xmlns:local="clr-namespace:HackF5.UnitySpy.AvaloniaGui.Views"
        x:Class="HackF5.UnitySpy.AvaloniaGui.Views.LinuxProcessSourceView"
        Margin="0,0,0,0" 
        Background="{x:Null}">

  <StackPanel Background="#FFFF00FF">
    <StackPanel Orientation="Horizontal" Background="#FF0000FF">      
      <TextBox Text="{Binding MemPseudoFilePath}" />
      <Button Command="{Binding OpenMemPseudoFile}">Open</Button>
    </StackPanel>
    <StackPanel Orientation="Horizontal" Background="#FF0000FF">      
      <TextBox Text="{Binding MapsPseudoFilePath}" />
      <Button Command="{Binding OpenMapsPseudoFile}">Open</Button>
    </StackPanel>
    <StackPanel Orientation="Horizontal" Background="#FF0000FF">      
      <TextBox Text="{Binding GameExecutableFilePath}" />
      <Button Command="{Binding OpenGameExecutableFile}">Open</Button>
    </StackPanel>
    <Button Command="{Binding BuildImageAssembly}">Read</Button>
  </StackPanel>

</UserControl>
